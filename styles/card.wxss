.cards{
	padding:16px;
}
.card{
	background: #ffffff;
	margin-bottom: 16px;
	transition: 0.5s all;
}
.card image{
	position: relative;
}
.card .label{
	position: absolute;
	bottom: 8px;
	right: 8px;
	font-size: 24rpx;
	padding: 4rpx 8rpx;
	background: rgba(0, 0, 0, 0.85);
	color: rgba(255, 255, 255, 0.9);
	border-radius: 2px;
}
.card.hover{
	box-shadow: 0 32px 28px rgba(0, 0, 0, 0.06);
}
.card image,.card video{
	height: 36vh;
}
.card .content{
	padding: 48rpx 48rpx 64rpx;
}
.card .header{
	font-weight: bold;
	font-size: 48rpx;
	letter-spacing: 2rpx;
	margin-bottom: 48rpx;
}
.card .header::after{
	content: '';
	display: block;
	width: 40px;
	border-bottom: 2px solid #000;
	padding-bottom: 8px
}
.card .sub-header{
	font-size: 32rpx;
	text-transform: uppercase;
	letter-spacing: 3rpx;
}
.card .description,.card .meta{
	font-size: 32rpx;
	color: rgba(0, 0, 0, 0.6);
	margin-bottom:8px; 
}